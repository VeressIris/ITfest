<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrackFragment">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/trackingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What would you like to add" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/habitDiv"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/habitTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habit" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/habitChip"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:checkable="true" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/toDoDiv"
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/toDoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To-do" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/todoChip"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:checkable="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/moodDiv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/moodTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mood" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/moodChip"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:checkable="true" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>